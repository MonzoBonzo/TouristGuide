<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="splashStyle" parent="@android:style/Theme">
       	<item name="android:windowTitleBackgroundStyle">@style/title</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTitleSize">45dp</item>
    </style>
    
   <style name="TitleBar" parent="@android:style/Theme">
       <item name="android:windowTitleBackgroundStyle">@null</item>
       <item name="android:windowTitleSize">0dp</item>
   </style>
   
       <style name="Icon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
    </style>
    
    <style name="IconText">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize"> 18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="title">
        <item name="android:background">@drawable/blue_logo</item>
    </style>
</resources>